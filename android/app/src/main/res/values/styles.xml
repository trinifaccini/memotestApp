<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
    </style>

    <!-- Estilo de la pantalla de inicio para Android 12+ -->
    <style name="Theme.MyApp.Launcher" parent="Theme.SplashScreen">
        <!-- Color de fondo de la pantalla de inicio -->
        <item name="android:windowSplashScreenBackground">@color/magenta</item>
        
        <!-- Ícono del splash (usualmente el ícono de la app) -->
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        
        <!-- Duración mínima que el sistema mostrará la pantalla splash -->
        <item name="android:windowSplashScreenAnimationDuration">300</item> <!-- Milisegundos -->
        
        <!-- Controla si el ícono debe ajustarse automáticamente a la pantalla -->
        <!-- <item name="android:windowSplashScreenIconBackgroundColor">@color/your_icon_background_color</item> -->
    </style>


</resources>